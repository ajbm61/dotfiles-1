[advice]

	statusHints = false
	detachedHead = false

[alias]

	a = add
	al = add .
	aliases = config --get-regexp alias
	amend = commit --amend
	ap = add --patch
	b = branch -av
	c = commit
	ca = commit -a
	cam = "!f() { git commit -a -m \"$*\"; }; f"
	cm = "!f() { git commit -m \"$*\"; }; f"
	co = checkout
	cod = checkout develop
	com = checkout master
	coprev = checkout HEAD^
	d = diff
	dl = diff
	ds = diff --staged
	f = fetch -v
	fa = fetch --all
	ff = merge --ff-only
	ffom = merge --ff-only origin/master
	hreset = reset --hard
	l = "!f() { git log --all --pretty=format:\"%C(auto)%h %s %n%<(1)        %D\" --date=short --decorate --graph -n "${1:-10}"; }; f"
	ll = "!f() { git log --pretty=format:\"%C(auto)%h %s %n        %cn <%ae> %ad%n        %D\" --decorate --date=short --graph -n "${1:-7}"; }; f"
	ls = "!f() { git log --oneline --decorate; }; f"
	m = merge
	mff = merge --ff-only
	mt = mergetool
	p = push
	pff = pull --ff-only
	prune = fetch --prune
	pt = push --tags
	r = remote -v
	rc = rebase --continue
	s = status
	stash-all = stash save --include-untracked
	t = "!f() { git tag -l | sort -V | tail; }; f"
	undo = reset --soft HEAD^
	conext = "!f() { git log HEAD...$1 --pretty=%H | tail -1 | xargs git checkout; }; f"
	ffnext = "!f() { git log HEAD...$1 --pretty=%H | tail -1 | xargs git merge --ff-only; }; f"

	changelog = "!f() { git log --no-merges $1 --not $2 --format=\"%h %s%+b\"; }; f"
	contributors = shortlog --summary --numbered # List contributors with number of commits https://github.com/mathiasbynens/dotfiles/blob/e32bc6cc07e1e25ba0821c3c20b488ead2133e0a/.gitconfig

	ctags = "!.git/hooks/ctags"

	doc     = "!f() { git commit -m \"doc: :pencil: $*\"; }; f"
	fix     = "!f() { git commit -m \":bug: fix $*\" -v; }; f"
	hi5     = "!f() { git commit -m \"^5 $*\"; }; f"

	batman  = "!f() { git add -A . && git commit -m \"Batman! $*\"; }; f"
	kapow   = "!f() { git add -A . && git commit -m \":facepunch: $*\"; }; f"
	w      	= "!f() { git add -A . && git commit -m \"$*\"; }; f"
	wa     	= "!f() { git add -A . && git commit -m \":metal: $*\"; }; f"
	wip     = "!f() { git add -A . && git commit -m \"wip: :construction: $*\"; }; f"
	zap     = "!f() { git add -A . && git commit -m \":zap: $*\"; }; f"
	zap2    = "!f() { git add -A . && git commit -m \":zap: :zap: $*\"; }; f"

[bash]

	showDirtyState = true

[color]

	ui = auto

[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	frag = cyan reverse
	meta = normal reverse
	new = green
	old = red
	whitespace = red reverse

[color "interactive"]

	prompt = blue reverse

[core]

	autocrlf = input
	editor = vi
	excludesfile = ~/.gitexcludes

[fetch]

	prune = true

[help]

	autocorrect = 1

[init]

	templatedir = ~/.gittemplates

[merge]

	branchdesc = true
	log = 65
	stat = true
	tool = fugitive

[mergetool]

	keepBackup = false

[mergetool "fugitive"]

	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"

[push]

	default = simple
    followTags = true

[status]

	showUntrackedFiles = all

[url "https://github"]

	# Because "git://" urls are causing major performance issues (ubuntu)
	insteadOf = git://github

[user]

	name = Gerard Roche
    email = gerardroche@users.noreply.github.com
